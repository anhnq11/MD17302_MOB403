<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".ui.carts.CartsFragment">

    <TextView
        android:id="@+id/cart_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giỏ hàng"
        android:textColor="@color/main_color"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginVertical="10dp"
        android:layout_below="@+id/cart_title"
        android:layout_above="@+id/bottom_layout"
        >

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#362c36"
                android:orientation="horizontal"

                android:padding="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cart_item_img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/baseline_person_24" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/card_item_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toRightOf="@+id/cart_item_img"
                    android:layout_toLeftOf="@+id/cart_item_quanlity"
                    android:layout_centerVertical="true"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sản phẩm"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20.000 Đ"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cart_item_quanlity"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext"
                    android:orientation="horizontal"
                    android:backgroundTint="#463d46"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    >

                    <LinearLayout
                        android:layout_weight="0"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/edittext"
                        android:backgroundTint="@color/main_color"
                        android:gravity="center"
                        >

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/baseline_add_circle_outline_24" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="28dp"
                        android:layout_marginVertical="4dp"
                        android:textStyle="bold"
                        />

                    <LinearLayout
                        android:layout_weight="0"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/edittext"
                        android:backgroundTint="@color/main_color"
                        android:gravity="center"
                        >

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/baseline_add_circle_outline_24" />

                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#362c36"
                android:orientation="horizontal"

                android:padding="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cart_item_img2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/baseline_person_24" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/card_item_info2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toRightOf="@+id/cart_item_img2"
                    android:layout_toLeftOf="@+id/cart_item_quanlity2"
                    android:layout_centerVertical="true"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sản phẩm"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20.000 Đ"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cart_item_quanlity2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext"
                    android:orientation="horizontal"
                    android:backgroundTint="#463d46"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    >

                    <LinearLayout
                        android:layout_weight="0"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/edittext"
                        android:backgroundTint="@color/main_color"
                        android:gravity="center"
                        >

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/baseline_add_circle_outline_24" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="28dp"
                        android:layout_marginVertical="4dp"
                        android:textStyle="bold"
                        />

                    <LinearLayout
                        android:layout_weight="0"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/edittext"
                        android:backgroundTint="@color/main_color"
                        android:gravity="center"
                        >

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/baseline_add_circle_outline_24" />

                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#362c36"
                android:orientation="horizontal"

                android:padding="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cart_item_img3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/baseline_person_24" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/card_item_info3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toRightOf="@+id/cart_item_img3"
                    android:layout_toLeftOf="@+id/cart_item_quanlity3"
                    android:layout_centerVertical="true"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sản phẩm"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20.000 Đ"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cart_item_quanlity3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext"
                    android:orientation="horizontal"
                    android:backgroundTint="#463d46"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    >

                    <LinearLayout
                        android:layout_weight="0"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/edittext"
                        android:backgroundTint="@color/main_color"
                        android:gravity="center"
                        >

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/baseline_add_circle_outline_24" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="28dp"
                        android:layout_marginVertical="4dp"
                        android:textStyle="bold"
                        />

                    <LinearLayout
                        android:layout_weight="0"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/edittext"
                        android:backgroundTint="@color/main_color"
                        android:gravity="center"
                        >

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/baseline_add_circle_outline_24" />

                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/spam1"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:text="----------------------------------------------------------------------------------------------------"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/cart_title_ship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phí vận chuyển"
            android:textColor="@color/main_color"
            android:textSize="23dp"
            android:layout_below="@+id/spam1"
            />

        <TextView
            android:id="@+id/cart_ship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20.000Đ"
            android:textAlignment="textEnd"
            android:textColor="@color/main_color"
            android:textSize="23dp"
            android:layout_toRightOf="@+id/cart_title_ship"
            android:layout_below="@+id/spam1"
            />

        <TextView
            android:id="@+id/cart_title_taxes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thuế VAT (10%)"
            android:textColor="@color/main_color"
            android:textSize="23dp"
            android:layout_below="@+id/cart_title_ship"
            />

        <TextView
            android:id="@+id/cart_taxes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6.000Đ"
            android:textAlignment="textEnd"
            android:textColor="@color/main_color"
            android:textSize="23dp"
            android:layout_toRightOf="@+id/cart_title_taxes"
            android:layout_below="@+id/cart_ship"
            />

        <TextView
            android:id="@+id/spam2"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:text="----------------------------------------------------------------------------------------------------"
            android:textColor="@color/white"
            android:layout_below="@+id/cart_title_taxes"
            />

        <TextView
            android:id="@+id/cart_title_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền"
            android:textColor="@color/main_color"
            android:textSize="27dp"
            android:textStyle="bold"
            android:layout_below="@+id/spam2"
            />

        <TextView
            android:id="@+id/cart_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="86.000Đ"
            android:textAlignment="textEnd"
            android:textColor="@color/main_color"
            android:textSize="27dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/cart_title_total"
            android:layout_below="@+id/spam2"
            />

        <EditText
            android:id="@+id/cart_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_box"
            android:hint="Ghi chú..."
            android:maxLines="2"
            android:textSize="23dp"
            android:paddingVertical="7dp"
            android:paddingHorizontal="15dp"
            android:layout_marginVertical="10dp"
            android:textColor="@color/main_color"
            android:textColorHint="@color/main_color"
            android:layout_below="@id/cart_title_total"
            />

        <TextView
            android:id="@+id/cart_button_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mua ngay"
            android:textSize="27dp"
            android:textStyle="bold"
            android:paddingVertical="5dp"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:background="@drawable/edittext"
            android:textColor="@color/background"
            android:layout_below="@+id/cart_note"
            />


    </RelativeLayout>


</RelativeLayout>